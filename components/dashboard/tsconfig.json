{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs", 
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
      "ee/src",
      "src"
  ],
  "exclude": [
    "src/setupTests.ts"
  ]
}
